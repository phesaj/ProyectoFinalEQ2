<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RedTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/bernier_shade_regular</item>
    </style>

    <style name="RedTextStyle2" parent="RedTextStyle">
        <item name="android:textColor">@color/Yellow</item>
    </style>

    <style name="GreyTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColorHint">@color/greysoft</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/bernier_shade_regular</item>
    </style>




</resources>